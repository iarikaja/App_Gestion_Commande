{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}
    <a class="btn btn-sm btn-primary mb-4" href="{{ path('create_produit') }}">Ajouter</a>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        {% for produit in produits %}
            <div class="col">
                <div class="card">
                    <img src="{{ asset('uploads/photos/' ~ produit.photo) }}" width="100%" height="225" />
                    
                    <div class="card-body">
                        <h3>{{produit.nomProd}}</h3>
                        <p>{{produit.prix}}</p>
                        <div class="d-flex justify-content-between">
                            <a class="btn btn-sm btn-outline-primary" href="{{path('show_produit', {'id': produit.id})}}">Detail</a>
                            <a class="btn btn-sm btn-outline-success" href="{{ path('create_commande', {'id': produit.id}) }}">Commander</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
